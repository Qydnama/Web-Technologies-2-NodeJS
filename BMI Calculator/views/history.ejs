<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BMI HISTORY</title>
    <!-- CSS -->
    <link rel="stylesheet" href="css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <a class="navbar-brand" href="/"><h1>BMI CALCULATOR</h1></a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNavDropdown">
                            <ul class="nav nav-tabs">
                                <li class="nav-item">
                                    <a class="nav-link text-body" href="/">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-body" href="/bmiCalculator">BMI</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-body active" href="/history">History</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
                <div class="col-2"></div>
            </div>
        </div>
    </header>
    <main>
        <div class="container">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8">
                    <h1 class="mt-3">BMI History</h1>
                    <ul class="list-group mt-3">
                        <% bmiHistory.forEach(entry => { %>
                            <li class="list-group-item">
                                <strong>Timestamp:</strong> <%= entry.timestamp %><br>
                                <strong>Age:</strong> <%= entry.age %><br>
                                <strong>Gender:</strong> <%= entry.gender %><br>
                                <strong>Height:</strong> <%= entry.height %><br>
                                <strong>Weight:</strong> <%= entry.weight %><br>
                                <strong>BMI:</strong> <%= entry.bmi %><br>
                            </li>
                        <% }); %>
                    </ul>
                </div>
                <div class="col-2"></div>
            </div>
        </div>
    </main>
    <footer>
        <div class="container d-flex justify-content-center"><h5>Made by: Baktybaiuly Amandyk, SE-2202</h5></div>
    </footer>
</body>
</html>
